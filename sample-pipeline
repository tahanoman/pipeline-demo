trigger:
- main  # Trigger pipeline on pushes to the main branch

pool:
  name: Default  # Use your self-hosted agent pool
  demands:
    - agent.name -equals TAHANOMAN

jobs:
- job: Test_Matrix
  strategy:
    matrix:
      Python38:
        python.version: '3.8'
      Python39:
        python.version: '3.9'
  steps:
  - task: UsePythonVersion@0
    inputs:
      versionSpec: '$(python.version)'
    displayName: 'Set up Python $(python.version)'

  - script: |
      python --version
      echo "Testing on Python $(python.version)"
    displayName: 'Check Python Version'
